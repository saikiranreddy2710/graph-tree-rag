# Graph-Tree RAG Configuration
# Copy to .env and fill in your API keys

# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Model overrides (defaults shown)
GTR_FAST_MODEL=gpt-4o-mini
GTR_STRONG_MODEL=claude-3-5-sonnet-20241022
GTR_LLM_TEMPERATURE=0.1

# Embedding model
GTR_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Web search fallback (Tavily)
GTR_WEB_SEARCH_API_KEY=tvly-...
GTR_WEB_SEARCH_ENABLED=true

# Feature flags
GTR_HYDE_ENABLED=true
GTR_CRAG_ENABLED=true
GTR_SPECULATIVE_ENABLED=true
GTR_SELF_RAG_ENABLED=true

# Security
GTR_SECURITY_PROMPT_GUARD_ENABLED=true
GTR_SECURITY_PII_FILTER_ENABLED=true
GTR_SECURITY_RBAC_ENABLED=true

# Observability
GTR_TRACING_ENABLED=true
GTR_LOG_LEVEL=INFO
